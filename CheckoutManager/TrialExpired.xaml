<Page
    x:Class="CheckoutManager.TrialExpired"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CheckoutManager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock Text="Your Free trial has expired" Style="{ThemeResource HeaderTextBlockStyle}" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignHorizontalCenterWithPanel="True" Name="titleText"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" RelativePanel.Below="titleText" RelativePanel.AlignHorizontalCenterWith="titleText">
            <Button Content="Buy On Windows Store" Click="Button_Click"/>
            <TextBlock Text="or" VerticalAlignment="Center"/>
            <Button Content="Contact about customized solutions" Click="Button_Click_1"/>
        </StackPanel>

    </RelativePanel>
</Page>
